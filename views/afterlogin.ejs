<!doctype html>
<html>
<head>
    <meta charset = "utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- disable zooming in mobile devices -->
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no">
    <title>Flash card learning</title>

    <link href="stylesheets/bootstrap.min.css" type="text/css" rel="stylesheet">
    <link href="stylesheets/style.css" type="text/css" rel="stylesheet">
</head>
<body>
<nav class="navbar navbar-default" role="navigation">
    <div class="container">
        <div class="navbar-header">
            <a class="navbar-brand" href="index.html">Learn Deutsch</a>
        </div>
        <div id="one">

            <a href="#">Username</a>


        </div>
    </div>
</nav>

<div class="container">
    <div class="jumbotron">
        <h4>Hello User,</h4>

        <a href="#">Learn from Flashcards</a><br/><br/>
        <a href="#">Test your level</a><br/><br/>
        <a href="#">Upload flashcards</a>
        <div id="flashCardHolder">
            <div class="learnBox loadCardFirst show">
                <div class="learnTitle">
                    Structure the speech
                </div>
                <div class="learnNumber">1</div>


                <h3 class="learnQuestion">example</h3>
                <div class="showButton justShow">Show »</div>
            </div>


            <div  class="hidden learnBox loadCardSecond">
                <div class="learnTitle">
                    Structure the speech
                </div>
                <div class="learnNumber">1</div>


                <h3 class="learnQuestion">mero name example ho</h3>
                <div class="buttonHolder">
                    <div class="showButton choose true">√</div>
                    <div class="showButton choose false">X</div>
                </div> <!-- buttonHolder ends -->
            </div>
        </div> <!-- flashCardHolder ends -->
    </div>
</div>


<script src="javascripts/jquery.js"></script>
<script src="javascripts/bootstrap.min.js"></script>
<script src="javascripts/jquery-ui-1.10.3.min.js"></script>
<script>
    $(function(){
        $(".justShow").click(function(){
            $(".loadCardFirst").removeClass("show").addClass('hidden');
            $(".loadCardSecond").removeClass("hidden").addClass("show");

        });
        $(".choose").click(function(){
            $(".loadCardSecond").removeClass("show").addClass("hidden");
            $(".loadCardFirst").removeClass("hidden").addClass('show');

        });
    });
</script>
</body>
</html>